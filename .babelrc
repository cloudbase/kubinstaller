{
  "presets": [
    ["env", {
      "targets": { "node": 7 },
      "useBuiltIns": true
    }],
    "stage-0",
    "react"
  ],
  "plugins": [
    "add-module-exports", 
    "dynamic-import-webpack", 
    "babel-plugin-styled-components",
    "transform-class-properties",
    "transform-es2015-classes"
  ],
  "env": {
    "production": {
      "presets": ["react-optimize"],
      "plugins": [
        "dev-expression", 
        [
          "styled-components",
          {
            "displayName": false
          }
        ]
      ]
    }
  }
}
